<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Basketball Team Signup</title>
  </head>
  <body>
    <h1>Basketball Team Signup</h1>
    
    <%= form_with url: '/team', method: :post, local: true do |form| %>
      <div>
        <%= form.label :name, "Team Name:" %>
        <%= form.text_field :name %>
      </div>
      
      <div>
        <%= form.label :coach, "Coach:" %>
        <%= form.text_field :coach %>
      </div>
      
      <div>
        <%= form.label :pg, "Point Guard:" %>
        <%= form.text_field :pg %>
      </div>
      
      <div>
        <%= form.label :sg, "Shooting Guard:" %>
        <%= form.text_field :sg %>
      </div>
      
      <div>
        <%= form.label :pf, "Power Forward:" %>
        <%= form.text_field :pf %>
      </div>
      
      <div>
        <%= form.label :sf, "Small Forward:" %>
        <%= form.text_field :sf %>
      </div>
      
      <div>
        <%= form.label :c, "Center:" %>
        <%= form.text_field :c %>
      </div>
      
      <%= form.submit "Submit", id: "Submit" %>
    <% end %>
  </body>
</html>
